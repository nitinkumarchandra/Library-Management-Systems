@model IEnumerable<NitinChandraMVC.Models.UserModel>

@{
    ViewBag.Title = "Index";
}


<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <title>Untitled</title>
    <meta name="description" content="This is an example of a meta description.">
    <link rel="stylesheet" type="text/css" href="theme.css">

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css"
          integrity="sha512-1ycn6IcaQQ40/MKBW2W4Rhis/DbILU74C1vSrLJxCq57o941Ym01SwNsOMqvEBFlcgUa6xLiPY/NS5R+E6ztJQ=="
          crossorigin="anonymous" referrerpolicy="no-referrer" />




</head>
<body>


    <style>
        .fnt {
            font-size: 20px;
            padding: 3px;
        }
    </style>



    @{
        foreach (var item in Model)
        {
            <div class="card" style="width:60rem;">
                <div class="card-body">
                        <div>
                            <br />


                            <div style="">
                                <p class="text-center" style="border: 1px solid #000; border-radius: 100%; width: 6rem; height: 6rem; font-size: 40px; background-color: #000; color: #fff;">
                                    @item.Id
                                </p>
                            </div>

                                <dl class="dl-horizontal fnt">
                                    <dt>
                                        Name:
                                    </dt>
                                    <dd>
                                        @item.Name
                                    </dd>
                                    <dt>
                                        Email:
                                    </dt>
                                    <dd>
                                        @item.Email
                                    </dd>
                                    <dt>
                                        Address:
                                    </dt>
                                    <dd>
                                        @item.Address
                                    </dd>
                                    <dt>
                                        Mobile:
                                    </dt>
                                    <dd>
                                        @item.Mobile
                                    </dd>
                                    <dt>
                                        Role:
                                    </dt>
                                    <dd>
                                        @item.Role
                                    </dd>
                                </dl>
                            </div>
                </div>
            </div>
        }
    }


</body>
</html>