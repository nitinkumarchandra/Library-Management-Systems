@model NitinChandraMVC.Models.Books

@{
    ViewBag.Title = "Create";
}

<style>
    .fnt {
        font-size: 20px;
        padding: 3px;
    }
</style>

<h2>Create</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <h4>Books</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group" style="font-size: 20px;">
        <label class="control-label col-md-2">Book Name:</label>
        <div class="col-md-10">
            @Html.EditorFor(model => model.Book_Name, new { htmlAttributes = new { @class = "form-control fnt" } })
            @Html.ValidationMessageFor(model => model.Book_Name, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group" style="font-size: 20px;">
        <label class="control-label col-md-2">Author Name:</label>
        <div class="col-md-10">
            @Html.EditorFor(model => model.Author_Name, new { htmlAttributes = new { @class = "form-control fnt" } })
            @Html.ValidationMessageFor(model => model.Author_Name, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group" style="font-size: 20px;">
        <label class="control-label col-md-2">Price:</label>
        <div class="col-md-10">
            @Html.EditorFor(model => model.Book_Price, new { htmlAttributes = new { @class = "form-control fnt" } })
            @Html.ValidationMessageFor(model => model.Book_Price, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Add New Book" style="font-size: 20px;" class="btn btn-primary" />
        </div>
    </div>
</div>
}

<div style="font-size: 20px;">
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
